<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <link rel="stylesheet" href="/styles/cart.css">
  <script src="https://kit.fontawesome.com/299785c8fd.js" crossorigin="anonymous"></script>

</head>

<body>

  <div class="nav">
    <div class="logo">
      <a href="/"><img src="/images/logo1.jpg" alt="logo" srcset="" class="logo2"></a>
    </div>
    <form action="/search" method="POST" class="search-box">
      <input type="text" name="query" placeholder="Search products...">
      <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
    <ul>
      <!-- Cart -->
      <i class="fa-solid fa-cart-shopping"></i>
      <li><a href="/cart">Cart</a></li>
      <i class="fa-solid fa-shop"></i>

      <!-- Become a seller -->
      <li><a href="/add-products">Become a Seller</a></li>
    </ul>

    <!-- Dropdowm Content -->
    <div class="dropdown">
      <button class="dropdown-btn"><a href="/login-signup">Login </a> <i class="fa-solid fa-caret-down"></i></button>
      <span></span>
      <div class="dropdown-content">
        <div class="sign-in">
          <p>New User!</p> <button> <a href="#">Sign-in</a></button>
        </div>
        <hr>
        <a href="#"><i class="fa-regular fa-user"></i>Account</a>
        <a href="#"><i class="fa-solid fa-heart"></i>Wishlist</a>
      </div>
    </div>
  </div>


  <!-- Cart Item -->
 <!-- Cart Item -->
 <div class="container">
  <h1>Your Cart</h1>

  <% if (cart && cart.products.length > 0) { %>
      <ul>
          <% cart.products.forEach(product => { %>
              <li id="cartli">
                  <img src="<%= product.productUrl %>" alt="<%= product.productName %>" width="100">
                  <div class="product-details">
                      <h2><%= product.productName %></h2>
                      <p>Price: &#8377; <%= product.productPrice %></p>
                      <p>Quantity: <%= product.quantity %></p>
                  </div>
                  <form action="/remove-item" method="POST" class="remove-form">
                      <input type="hidden" name="productId" value="<%= product.productId %>">
                      <button type="submit" class="remove-button">Remove Item</button>
                  </form>
              </li>
          <% }); %>
      </ul>
  <% } else { %>
      <p>Your cart is empty.</p>
  <% } %>
</div>
</body>

</html>